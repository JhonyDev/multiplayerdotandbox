<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/grids">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.001" />
    <TextView
        android:id="@+id/txtGridSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192sp"
        android:layout_marginRight="45dp"
        android:fontFamily="@font/muli_bold"
        android:text="Select Grid Size"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/color_text"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />


    <TableLayout
        android:layout_width="0dp"
        android:layout_height="370dp"
        android:layout_marginTop="115dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGridSize"
        app:layout_constraintVertical_bias="0.533">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="left">

            <TextView
                android:id="@+id/gridSizeFourByFour"
                android:layout_width="120dp"
                android:layout_height="80sp"

                android:layout_marginLeft="35dp"



                android:fontFamily="@font/muli_semi_bold"
                android:gravity="center"
                android:text="4 x 4"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/gridSizeFiveByFive"
                android:layout_width="120dp"
                android:layout_height="80sp"
                android:layout_marginLeft="40dp"

                android:fontFamily="@font/muli_semi_bold"
                android:gravity="center"
                android:text="5 x 5"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110sp"
            android:gravity="left">

            <TextView
                android:id="@+id/gridSizeSixBySix"
                android:layout_width="120dp"
                android:layout_height="80sp"

                android:layout_marginLeft="37dp"


                android:fontFamily="@font/muli_semi_bold"
                android:gravity="center"
                android:text="6 x 6"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/gridSizeSevenBySeven"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"

                android:fontFamily="@font/muli_semi_bold"
                android:gravity="center"
                android:text="7 x 7"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="28sp" />
        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>